{
    "name": "template-node-typescript",
    "version": "1.0.0",
    "description": "Basic template for nodejs modules written in Typescript. Includes tsc, jest, eslint.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/scristobal/node-ts-module-template.git"
    },
    "keywords": [
        "template",
        "boilerplate",
        "nodejs",
        "typescript"
    ],
    "author": "Samuel Cristobal",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/scristobal/node-ts-module-template/issues"
    },
    "homepage": "https://github.com/scristobal/node-ts-module-template#readme",
    "main": "build/index.js",
    "type": "module",
    "scripts": {
        "test": "jest",
        "watcher": "jest --watch",
        "build": "rm -rf build && tsc -p .",
        "start": "node . ",
        "lint": "eslint src --ext 'ts,tsx,json'",
        "dev": "tsc-watch --onSuccess 'node .' ",
        "release": "np"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.2",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "@vercel/ncc": "^0.31.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jest": "^24.5.2",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.4",
        "np": "^7.5.0",
        "npm-check-updates": "^11.8.5",
        "ts-jest": "^27.0.5",
        "tsc-watch": "^4.5.0",
        "typescript": "^4.4.3"
    }
}
